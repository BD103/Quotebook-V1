{% extends "base.jinja2" %}

{% block title %}Login | Quotebook{% endblock %}

{% block content %}
  <section class="section">
    <div class="container">
      <form method="POST" action="/login">
        {{ form.csrf_token }}

        <div class="field">
          {{ form.username.label }}
          <div class="control">
            {{ form.username(class_="input") }}
          </div>
        </div>

        <div class="field">
          {{ form.password.label }}
          <div class="control">
            {{ form.password(class_="input") }}
          </div>
        </div>

        <div class="field">
          <div class="control">
            {{ form.submit(class_="button is-link") }}
          </div>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
